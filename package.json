{
  "name": "cycle-firebase-driver",
  "version": "1.0.0-1",
  "description": "A Cycle.js driver for Firebase.",
  "author": "Scott Hardy",
  "license": "MIT",
  "repository": "git@github.com:scott113341/cycle-firebase-driver.git",
  "homepage": "https://github.com/scott113341/cycle-firebase-driver",
  "bugs": "https://github.com/scott113341/cycle-firebase-driver/issues",
  "main": "lib/index.js",
  "files": [
    "lib/",
    "src/"
  ],
  "scripts": {
    "build": "shx rm -rf lib/ && shx mkdir lib/ && babel --copy-files --source-maps --out-dir lib/ src/",
    "ez-publish": "npm version prerelease && npm publish --tag next && git push origin dev --follow-tags",
    "lint": "semistandard --fix",
    "test": "npm run build && node lib/test/index.js"
  },
  "dependencies": {
    "firebase": "^3.6.2",
    "lodash": "^4.17.2",
    "xstream": "^9.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "np": "^2.10.1",
    "semistandard": "^9.1.0",
    "shx": "^0.2.1",
    "source-map-support": "^0.4.6",
    "tape": "^4.6.3"
  },
  "semistandard": {
    "ignore": [
      "/lib/"
    ]
  }
}
